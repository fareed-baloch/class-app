<%- include('header') %>
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Students</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            <%- messages('errors', locals) %>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Batch</th>
                            <th>image</th>
                            <th>Created-at</th>
                            <th>Updated-at</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Batch</th>
                            <th>image</th>
                            <th>Created-at</th>
                            <th>Updated-at</th>
                            <th>Delete</th>
                            <th>Update</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        <% students.forEach(student =>{ %>
                        <tr role="row" class="odd">
                            <td class="sorting_1"><%= student._id %> </td>
                            <td><%= student.name %></td>
                            <td><%= student.batch %></td>
                            <td><img src="/uploads/<%= student.image %>" width="50px" height="50px" alt="" srcset=""></td>
                            <td><%= student.createdAt %></td>
                            <td><%= student.updatedAt %></td>
                            <td><a class="btn btn-danger"  href="students/delete/<%= student._id %> ">Delete</a></td>
                            <td><a class="btn btn-info"  href="students/update/<%= student._id %> ">Update</a></td>
                    
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<%- include('footer') %>