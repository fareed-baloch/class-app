<%- include('header') %> 
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    
                  
                    <% if (typeof alert != 'undefined') { %>
                        <% alert.forEach(error=>{ %> 
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Waring!</strong> <%= error.msg %> 
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <% }) %> 
                      <% } %>
                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Update Student page</h1>
                    <form action="/users/create" method="post">
                        <label class="form-item" for="name">Name:</label>
                        <input class="form-control" type="text"   name="name">
                        <label class="form-item" for="batch">Email:</label>
                        <input type="email" class="form-control" name="email">

                        <label class="form-item" for="batch">Role:</label>
                        <select class="form-control" name="role" id="">
                            <option value="1">user</option>
                            <option value="2">admin</option>
                            <option value="3">super admin</option>
                        </select>

                        <label class="form-item" for="batch">Password:</label>
                        <input type="password" class="form-control"  class="form-control-file"   name="password">
                        <label class="form-item" for="batch"> Confrim Password:</label>
                        <input type="password" class="form-control"  class="form-control-file"   name="password2">
                    
                       
                        <br>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
<%- include('footer') %> 